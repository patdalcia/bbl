import heroImage from '../../util/hero-image-alternate.png'


export interface Props {
	title?: string;
  subtitle? : string;
  image? : string | any; 
}

const {
	title = await Astro.slots.render('title'),
  subtitle = await Astro.slots.render('subtitle'),
  image = await Astro.slots.render('image'),
} = Astro.props;

